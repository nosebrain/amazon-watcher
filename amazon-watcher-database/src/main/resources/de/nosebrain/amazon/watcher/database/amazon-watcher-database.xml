<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<typeAliases>
		<typeAlias type="java.net.URL" alias="url" />
		<typeAlias type="de.nosebrain.amazon.watcher.model.Item" alias="Item"/>
	</typeAliases>
	
	<typeHandlers>
		<typeHandler javaType="url"								handler="de.nosebrain.amazon.watcher.database.util.typehandler.URLTypeHandler" />
	</typeHandlers>
	
	<mappers>
		<mapper resource="de/nosebrain/amazon/watcher/database/ItemMapper.xml"/>
	</mappers>
</configuration>