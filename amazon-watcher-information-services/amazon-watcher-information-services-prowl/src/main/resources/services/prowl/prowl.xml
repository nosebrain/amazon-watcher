<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd
							http://www.springframework.org/schema/context 
                          	http://www.springframework.org/schema/context/spring-context.xsd
                          	http://www.springframework.org/schema/mvc
			    			http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

	<!-- properties -->
	<bean id="properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
    	<property name="locations">
    		<list>
        		<value>classpath:/services/prowl/prowl.properties</value>
        		<value>file:${catalina.home}/conf/amazon-watcher/services/prowl/prowl.properties</value>
      		</list>
    	</property>
    	<property name="ignoreResourceNotFound" value="true" />
	</bean>
	
	<bean id="propertyConfigurer"  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="properties" ref="properties" />
    	<property name="placeholderPrefix" value="prowl:{" />
	</bean>
	
	<!-- prowl information service -->
	<bean id="prowl" class="de.nosebrain.amazon.watcher.services.prowl.ProwlInfoService">
		<property name="apiKeys" value="prowl:{prowl.apiKeys}" />
		<property name="client" value="prowlClient" />
	</bean>
	
	<bean id="ProwlClient" class="de.nosebrain.prowl.ProwlClient" />
	
	<bean id="providerProwlClient" class="de.nosebrain.prowl.ProviderProwlClient">
		<constructor-arg value="prowl:{prowl.providerKey}" />
	</bean>
	
	<alias name="prowl:{prowl.client}ProwlClient" alias="prowlClient" />
</beans>